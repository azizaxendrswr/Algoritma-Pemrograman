
print()
class kendaraan():
    def __init__(self):
        print()
        print('ini adalah jenis kendaraan darat')
   
class car(kendaraan): 
    def __init__(self,merk,model):
        super().__init__()
        self.merk = str.capitalize(merk)
        self.model = str.capitalize(model)
        print(f'{self.merk} {self.model} adalah jenis kendaraan beroda empat')
        
class bus(kendaraan):
    def __init__(self,merk,model):
        super().__init__()
        self.merk = str.capitalize(merk)
        self.model = str.capitalize(model)
        print(f'{self.merk} {self.model} adalah jenis kendaraan beroda empat atau lebih')

class bicycle(kendaraan):
    def __init__(self,merk,model):
        super().__init__()
        self.merk = str.capitalize(merk)
        self.model = str.capitalize(model)
        print(f'{self.merk} {self.model} adalah jenis kendaraan beroda dua')
        
class motorcycle(kendaraan):
    def __init__(self,merk,model):
        super().__init__()
        self.merk = str.capitalize(merk)
        self.model = str.capitalize(model)
        print(f'{self.merk} {self.model} adalah jenis kendaraan beroda dua')
            
a1 = car('avanza','xenia')
a2 = bus('blue bird','bus pariwisata')
a3 = bicycle('polygon','specialized')
a4 = motorcycle('vario','beat')
